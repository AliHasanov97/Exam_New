<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const filterButtons = document.querySelectorAll('.filter-btn');
        const sampleItems = document.querySelectorAll('.sample-item');

        // Filtrləmə funksiyası
        function filterItems() {
            const searchTerm = searchInput.value.toLowerCase();
            const activeFilter = document.querySelector('.filter-btn.active').dataset.filter;

            sampleItems.forEach(item => {
                const grade = item.dataset.grade;
                const searchText = item.dataset.search.toLowerCase();

                const matchesSearch = searchText.includes(searchTerm);
                const matchesFilter = activeFilter === 'all' || grade === activeFilter;

                if (matchesSearch && matchesFilter) {
                    item.classList.remove('hidden');
                } else {
                    item.classList.add('hidden');
                }
            });
        }

        // Axtarış inputu üçün event listener
        searchInput.addEventListener('input', filterItems);

        // Filtr düymələri üçün event listener
        filterButtons.forEach(button => {
            button.addEventListener('click', function() {
                filterButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                filterItems();
            });
        });
    });
</script>