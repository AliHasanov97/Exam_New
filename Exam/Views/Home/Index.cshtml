@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<section class="Carousel">
    <div id="luxuryCarousel" class="carousel slide" data-bs-ride="carousel"
    style="overflow: hidden; background: #000; max-height: 600px;">

        <!-- Indicator Dots -->
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.Sliders.Count; i++)
            {
                <button type="button" data-bs-target="#luxuryCarousel"
                data-bs-slide-to="@i"
                class="@(i == 0 ? "active" : "")"
                aria-label="Slide @(i+1)"></button>
            }
        </div>

        <!-- Slides -->
        <div class="carousel-inner h-100">
            @foreach (var slide in Model.Sliders)
            {
                <div class="carousel-item h-100 @(slide == Model.Sliders.First() ? "active" : "")">
                    <!-- Gradient Overlay -->
                    <div class="position-absolute w-100 h-100"
                    style="background: linear-gradient(to right, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 100%); z-index: 1;"></div>

                    <!-- Image with Lazy Loading -->
                    <img src="@slide.ImageUrl"
                    class="d-block w-100 h-100 object-fit-cover"
                    alt="@slide.Title"
                    loading="lazy">

                    <!-- Caption with Animation -->
                    <div class="carousel-caption container d-flex flex-column justify-content-center h-100"
                    style="z-index: 2; padding-bottom: 8rem;">
                        <h5 class="display-3 fw-bold mb-4 text-white animate__animated animate__fadeInDown">@slide.Title</h5>
                        <p class="text-white fs-4 mb-5 animate__animated animate__fadeInUp animate__delay-1s"
                        style="max-width: 600px; text-shadow: 2px 2px 5px rgba(0,0,0,0.5);">@slide.Description</p>
                        <div class="animate__animated animate__fadeInUp animate__delay-2s">
                            <button class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill">Ətraflı</button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#luxuryCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bg-dark bg-opacity-50 rounded-circle p-3"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#luxuryCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon bg-dark bg-opacity-50 rounded-circle p-3"></span>
        </button>
    </div>

</section>
