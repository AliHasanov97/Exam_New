<header>
    <nav id="mainNavbar" class="navbar navbar-expand-lg navbar-light bg-white sticky-top border-bottom">
        <div class="container">
            <!-- Brand/Logo -->
            <a class="navbar-brand fw-bold fs-3 text-primary d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="bi bi-journal-bookmark me-2"></i>
                <span>İmtahan</span>
                <span class="badge bg-success ms-2 fs-6 align-middle">AZ</span>
            </a>

            <!-- Mobile Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Content -->
            <div class="collapse navbar-collapse" id="navbarContent">
                <!-- Navigation Links -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item mx-1">
                        <a class="nav-link py-2 active" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-1"></i> Əsas
                        </a>
                    </li>

                    <li class="nav-item mx-1 dropdown">
                        <a class="nav-link py-2 dropdown-toggle" href="#About" id="aboutDropdown" data-bs-toggle="dropdown">
                            <i class="bi bi-info-circle me-1"></i> Haqqımızda
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-building me-2"></i> Şirkət</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-award me-2"></i> Uğurlar</a></li>
                        </ul>
                    </li>

                    <li class="nav-item mx-1 dropdown">
                        <a class="nav-link py-2 dropdown-toggle" href="#Services" id="servicesDropdown" data-bs-toggle="dropdown">
                            <i class="bi bi-collection me-1"></i> Xidmətlər
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="Test"><i class="bi bi-journal-text me-2"></i> Testlər</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-laptop me-2"></i> Online Dərslər</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-graph-up me-2"></i> Analitika</a></li>
                        </ul>
                    </li>

                    <li class="nav-item mx-1">
                        <a class="nav-link py-2" href="#Staff">
                            <i class="bi bi-people me-1"></i> Komanda
                        </a>
                    </li>
                </ul>

                <!-- Right Side Elements -->
                <div class="d-flex align-items-center">
                    <!-- Search -->
                    <div class="input-group me-3 d-none d-lg-flex" style="width: 220px;">
                        <input type="text" class="form-control form-control-sm" placeholder="Axtar...">
                        <button class="btn btn-sm btn-outline-primary" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>

                    <!-- Authentication Section -->
                    @if (ViewData["FullName"] != null)
                    {
                        <!-- User Dropdown (Logged In) -->
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" data-bs-toggle="dropdown">
                                @{
                                    // Profil şəkilini sessiyadan alırıq
                                    var profileImage = ViewData["Picture"]?.ToString();

                                    // Əgər profil şəkli mövcud deyilsə, standart şəkil istifadə et
                                    profileImage = string.IsNullOrEmpty(profileImage) ? "/images/default-profile.png" : profileImage;
                                }

                                <img src="@profileImage" alt="User" class="rounded-circle me-2" width="32" height="32">
                                <span class="d-none d-lg-inline">@ViewData["FullName"]</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i> Profil</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i> Tənzimləmələr</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Auth" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i> Çıxış
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <!-- Google Login Button (Not Logged In) -->
                        <div class="ms-2">
                            <form asp-controller="Auth" asp-action="GoogleLogin" method="post">
                                <button type="submit" class="btn btn-outline-primary d-flex align-items-center">
                                    <img src="https://cdn1.iconfinder.com/data/icons/google-s-logo/150/Google_Icons-09-512.png" alt="Google logo" width="18" class="me-2">
                                    <span>Daxil ol</span>
                                </button>
                            </form>
                        </div>
                    }

                </div>
            </div>
        </div>
    </nav>
</header>