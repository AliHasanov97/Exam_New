<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Exam</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/services.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/staff.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
</head>
<body>
    @await Component.InvokeAsync("Header")

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <!-- Column 1 -->
                <div class="footer-col">
                    <h3 class="footer-title">Exam</h3>
                    <p class="footer-text">İnnovativ texnoloji həllər təqdim edirik</p>
                    <div class="footer-social">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <!-- Column 2 -->
                <div class="footer-col">
                    <h4 class="footer-subtitle">Səhifələr</h4>
                    <ul class="footer-links">
                        <li><a href="#">Ana Səhifə</a></li>
                        <li><a href="#Services">Xidmətlər</a></li>
                        <li><a href="#About">Haqqımızda</a></li>
                    </ul>
                </div>

                <!-- Column 3 -->
                <div class="footer-col">
                    <h4 class="footer-subtitle">Xidmətlər</h4>
                    <ul class="footer-links">
                        <li><a href="#">Veb Dizayn</a></li>
                        <li><a href="#">Mobil Proqramlar</a></li>
                        <li><a href="#">SEO</a></li>
                    </ul>
                </div>

                <!-- Column 4 -->
                <div class="footer-col">
                    <h4 class="footer-subtitle">Əlaqə</h4>
                    <ul class="footer-contact">
                        <li><i class="bi bi-geo-alt"></i> Bakı, Azərbaycan</li>
                        <li><i class="bi bi-envelope"></i> info@exam.az</li>
                        <li><i class="bi bi-telephone"></i> +994 12 345 67 89</li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                <p class="copyright">© 2023 Exam. Bütün hüquqlar qorunur.</p>
                <div class="footer-legal">
                    <a asp-action="Privacy">Məxfilik Siyasəti</a>
                    <a asp-action="Rules">Şərtlər</a>
                </div>
            </div>
        </div>
    </footer>





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Əlavə konfiqurasiya
        document.addEventListener('DOMContentLoaded', function() {
            var scrollSpy = new bootstrap.ScrollSpy(document.body, {
                target: '#mainNavbar',
                offset: 100
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
