</div>

<div class="dashboard-section">
    <h3 class="section-title"><i class="bi bi-graph-up"></i> Şəxsi Statistika</h3>
    <div class="stats-grid">
        <!-- İmtahan Statistikası -->
        <div class="stat-card primary">
            <div class="stat-icon">
                <i class="bi bi-journal-check"></i>
            </div>
            <div class="stat-info">
                <h4>Tamamlanmış İmtahanlar</h4>
                <p class="stat-value">12</p>
                <p class="stat-change positive">+2 keçən aya nisbətən</p>
            </div>
        </div>

        <!-- Ortalama Nəticə -->
        <div class="stat-card success">
            <div class="stat-icon">
                <i class="bi bi-award"></i>
            </div>
            <div class="stat-info">
                <h4>Ortalama Nəticə</h4>
                <p class="stat-value">87%</p>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 87%"></div>
                </div>
            </div>
        </div>

        <!-- Aktiv İmtahanlar -->
        <div class="stat-card warning">
            <div class="stat-icon">
                <i class="bi bi-clock-history"></i>
            </div>
            <div class="stat-info">
                <h4>Aktiv İmtahanlar</h4>
                <p class="stat-value">3</p>
                <a href="/imtahanlar" class="stat-link">Hamısına bax →</a>
            </div>
        </div>

        <!-- Son Test Nəticəsi -->
        <div class="stat-card info">
            <div class="stat-icon">
                <i class="bi bi-clipboard-data"></i>
            </div>
            <div class="stat-info">
                <h4>Son Test Nəticəsi</h4>
                <p class="stat-value">92%</p>
                <p class="stat-meta">Riyaziyyat - 15 May 2023</p>
            </div>
        </div>
    </div>
</div>

