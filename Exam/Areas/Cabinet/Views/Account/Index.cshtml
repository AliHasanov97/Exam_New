@model User;

<div class="dashboard-section">
    <div class="section-title">
        <i class="bi bi-person-lines-fill"></i>
        <h3>Şəxsi Məlumatlar</h3>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="user-profile-card text-center p-4 flex-wrap" style="background: var(--glass-bg); border-radius: 16px;">
                <div class="mx-auto" style="width: 150px; height: 150px; overflow: hidden; border-radius: 50%; border: 3px solid var(--primary-light);">
                    <img src="@Model.Picture"
                         alt="Profil şəkli"
                         style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                <h3 class="mt-3 mb-1">@Model.FullName</h3>
                <p class="text-muted mb-3">Tələbə</p>
                <div class="d-flex justify-content-center gap-2">
                    <button class="btn btn-sm" style="background: var(--primary); color: white;">
                        <i class="bi bi-pencil"></i> Redaktə
                    </button>
                    <button class="btn btn-sm" style="background: var(--card-bg); color: var(--text);">
                        <i class="bi bi-camera"></i> Şəkil
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="user-details-card" style="background: var(--card-bg); border-radius: 16px; padding: 1.5rem;">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small">Ad</label>
                        <p class="detail-value">@Model.FullName.Split(" ").FirstOrDefault()</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small">Soyad</label>
                        <p class="detail-value">@Model.FullName.Split(" ").LastOrDefault()</p>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label class="text-muted small">Email</label>
                        <p class="detail-value">@Model.Email</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small">Qeydiyyat tarixi</label>
                        <p class="detail-value">15 Yanvar 2023</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small">Status</label>
                        <p class="detail-value">
                            <span class="badge" style="background: rgba(0, 184, 148, 0.2); color: var(--success);">
                                Aktiv
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="dashboard-section">
    <div class="section-title">
        <i class="bi bi-wallet"></i>
        <h3>Balans</h3>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="balance-card" style="background: var(--card-bg); border-radius: 16px; padding: 1.5rem;">
                <h5 class="mb-3">Cari Balans</h5>
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">₼ @Model.Balance.ToString("F")</h3>
                    <button class="btn btn-sm" style="background: var(--primary-light); color: var(--primary);">
                        <i class="bi bi-arrow-up-right"></i> Əlavə et
                    </button>
                </div>
                <p class="text-muted small mt-2">Balansınızı artırmaq üçün yuxarıdakı düyməni istifadə edin.</p>
            </div>
        </div>

        <div class="col-md-6">
            <div class="balance-card" style="background: var(--card-bg); border-radius: 16px; padding: 1.5rem;">
                <h5 class="mb-3">Son Əməliyyatlar</h5>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <p class="mb-0">Yükləmə</p>
                    <p class="text-muted small mb-0">₼ 50.00</p>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <p class="mb-0">Çıxarma</p>
                    <p class="text-muted small mb-0">₼ 100.00</p>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <p class="mb-0">Ödəniş</p>
                    <p class="text-muted small mb-0">₼ 200.00</p>
                </div>
                <a href="#" class="view-all mt-2">Bütün əməliyyatlara bax <i class="bi bi-arrow-right"></i></a>
            </div>
        </div>
    </div>
</div>


<div class="dashboard-section">
    <div class="section-title">
        <i class="bi bi-shield-lock"></i>
        <h3>Təhlükəsizlik</h3>
    </div>

    <div class="security-items">
        <div class="security-item" style="background: var(--card-bg); border-radius: 12px; padding: 1rem; margin-bottom: 1rem;">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">Şifrə</h5>
                    <p class="text-muted small mb-0">Son dəyişiklik: 2 həftə əvvəl</p>
                </div>
                <button class="btn btn-sm" style="background: var(--primary-light); color: var(--primary);">
                    <i class="bi bi-arrow-repeat"></i> Dəyiş
                </button>
            </div>
        </div>

        <div class="security-item" style="background: var(--card-bg); border-radius: 12px; padding: 1rem; margin-bottom: 1rem;">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">İki faktorlu autentifikasiya</h5>
                    <p class="text-muted small mb-0">Deaktivdir</p>
                </div>
                <button class="btn btn-sm" style="background: rgba(253, 203, 110, 0.2); color: var(--warning);">
                    <i class="bi bi-shield-check"></i> Aktiv et
                </button>
            </div>
        </div>

        <div class="security-item" style="background: var(--card-bg); border-radius: 12px; padding: 1rem;">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">Qurğular</h5>
                    <p class="text-muted small mb-0">3 qurğu bağlı</p>
                </div>
                <button class="btn btn-sm" style="background: rgba(214, 48, 49, 0.1); color: var(--danger);">
                    <i class="bi bi-laptop"></i> İdarə et
                </button>
            </div>
        </div>
    </div>
</div>

<div class="dashboard-section">
    <div class="section-title">
        <i class="bi bi-activity"></i>
        <h3>Fəaliyyət Jurnalı</h3>
    </div>

    <div class="activity-timeline">
        <div class="activity-item">
            <div class="activity-icon primary">
                <i class="bi bi-lock"></i>
            </div>
            <div class="activity-content">
                <h4>Şifrə dəyişdirildi</h4>
                <p class="text-muted small">Hesab şifrəniz uğurla yeniləndi</p>
                <div class="activity-meta">
                    <i class="bi bi-clock"></i> 2 həftə əvvəl
                    <span class="ms-3"><i class="bi bi-geo-alt"></i> Bakı, Azərbaycan</span>
                </div>
            </div>
        </div>

        <div class="activity-item">
            <div class="activity-icon success">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="activity-content">
                <h4>İmtahan tamamlandı</h4>
                <p class="text-muted small">Riyaziyyat imtahanını 92 bal ilə tamamladınız</p>
                <div class="activity-meta">
                    <i class="bi bi-clock"></i> 1 ay əvvəl
                </div>
            </div>
        </div>

        <div class="activity-item">
            <div class="activity-icon warning">
                <i class="bi bi-exclamation-triangle"></i>
            </div>
            <div class="activity-content">
                <h4>Yeni qurğu aşkar edildi</h4>
                <p class="text-muted small">Yeni qurğudan hesaba giriş aşkar edildi</p>
                <div class="activity-meta">
                    <i class="bi bi-clock"></i> 1 ay əvvəl
                    <span class="ms-3"><i class="bi bi-phone"></i> iPhone 13</span>
                </div>
            </div>
        </div>
    </div>

    <div class="section-footer">
        <a href="#" class="view-all">Bütün fəaliyyətlərə bax <i class="bi bi-arrow-right"></i></a>
    </div>
</div>