@section Scripts {
    <script>
        $(document).ready(function() {
            // Filter functionality
            $('#applyFilters').click(function() {
                const subject = $('#subjectFilter').val();
                const difficulty = $('#difficultyFilter').val();
                const status = $('#statusFilter').val();

                $('.subject-card').each(function() {
                    const cardSubject = $(this).data('subject');
                    const cardDifficulty = $(this).data('difficulty');
                    const cardStatus = $(this).data('status');

                    const subjectMatch = subject === '' || cardSubject === subject;
                    const difficultyMatch = difficulty === '' || cardDifficulty === difficulty;
                    const statusMatch = status === '' || cardStatus === status;

                    if (subjectMatch && difficultyMatch && statusMatch) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });

            // Reset filters
            $('#resetFilters').click(function() {
                $('#subjectFilter, #difficultyFilter, #statusFilter').val('');
                $('.subject-card').show();
            });

            // Add animation to exam cards
            $('.exam-card').hover(
                function() {
                    $(this).css('transform', 'translateY(-5px)');
                },
                function() {
                    $(this).css('transform', 'translateY(0)');
                }
            );
        });
    </script>
}